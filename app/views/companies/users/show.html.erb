<% if @user.interest_user? %>
  <button type="button" class="u-mb10 u-disable-button u-p2 u-block-right" disabled> Already Interest </button>
<% else %>
  <%= form_with(url: companies_interests_path, local: true) do |f| %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.select :project_id, options_for_select(@projects.map{|c|[c[:title], c[:id]]}) %>
    <%= f.submit value:"Interest", class: "interest-button u-block-center", data: { confirm: "Did you choose correct job post for the candidate?"} %>
  <% end %>
<% end %>

<% unless @is_channel %>
  <button type="button" class="u-mb10 interest-button u-p2 u-block-right " id="jsModalOpen">Send Message</button>
<% else%>
  <%= link_to(companies_channel_path(@channel)) do %>
  <button type="button" class="u-mb10 interest-button u-p2 u-block-right " id="">Open Message</button>
  <% end %>
<% end%>
<div class="companies_candidate_show_area">
  <div class="companies_candiate_container u-mt20">
    <div class="image-content u-pt30">
      <% if @user.image? %>
        <img src="<%= @user.image %>" class="candidate-img">
      <% else %>
        <img src="../../assets/user-icon.png" class="candidate-img">
      <% end %><br>
      <p class="u-pt30"><%= @user.name %></p>
      <p class="u-pt5"><%= @user.portfolio.career_text %></p>
    </div>
    <div class="companies-user-show-profile">
      <p class="u-left"><%= @user.career_year %></p>
      <p><%= @user.age %></p>
      <p><%= @user.area %></p>
      <p><%= @user.current_sign_in_at.strftime("%Y/%m/%d/%H:%M") %></p>
      <p class="u-left"><%= @user.portfolio.message %></p>
      <p><%= @user.portfolio.experience %></p>
      <p><%= @user.portfolio.first_site%></p>
      <p><%= @user.portfolio.first_image%></p>
    </div>
  </div>
</div>




<div id="overlay">
  <div id="modalWindow">
    <div class="modal-message-box">
      <p>Send Message to <%= @user.name %></p>
      <%= form_with(url: companies_channels_path, local: true) do |f| %>
        <%= f.label :content, "Message" %>
        <%= f.text_area :content, required: true %>
        <%= f.hidden_field :company_id, value: current_user.company.id %>
        <%= f.hidden_field :user_id, value: @user.id %>
        <%= f.submit value:"Send" %>
      <% end %>
      <button id="modal-close-btn">キャンセル</button>
    </div>
  </div>
</div>
