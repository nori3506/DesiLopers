  <%= form_with(model: form, url: url, local: true) do |f| %>
    <div class="company-form__first">
      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :name, "Company Name", class: 'required' %>
        </div>
        <div class="company-form__input">
          <%= f.text_field :name, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :file_name,"Company Main Image", class: 'required' %>
        </div>
        <% if form.main_image.present? %>
          <div class="company-form__image-area">
            <img src="<%= form.main_image %>", id="js-img_prev">
          </div>
        <% else %>
          <div class="company-form__image-area">
            <%= image_tag "select_image.png", id: 'js-img_prev' %>
          </div>
        <% end %>
        <div class="company-form__input">
          <%= f.file_field :file_name, id: 'js-user_img' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :zip, class: 'required' %>
        </div>
        <div class="company-form__input">
          <%= f.text_field :zip, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :address, class: 'required' %>
        </div>
        <div class="company-form__input">
          <%= f.text_area :address, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :phone, class: 'required' %>
        </div>
        <div class="company-form__input">
          <%= f.text_field :phone, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :url %>
        </div>
        <div class="company-form__input">
          <%= f.text_field :url, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__btn-area js-first-form-button">
          Next
        </div>
      </div>
    </div>

    <div class="company-form__second">
      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :slogan %>
        </div>
        <div class="company-form__input">
          <%= f.text_field :slogan, rows: 2, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :mission %>
        </div>
        <div class="company-form__input">
          <%= f.text_area :mission, rows: 2, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :mission_detail %>
        </div>
        <div class="company-form__input">
          <%= f.text_area :mission_detail, rows: 8, class: 'company-form__input-area' %>
        </div>
      </div>


      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :overview %>
        </div>
        <div class="company-form__input">
          <%= f.text_area :overview, rows: 8, class: 'company-form__input-area'%>
        </div>
      </div>

      <div class="company-form__element">
        <div class="js-second-form-button company-form__btn-area">
          Next
        </div>
        <div class="company-form__back-btn js-second-form-back">
          <span class="u-pointer">Back</span>
        </div>
      </div>
    </div>

    <div class="company-form__third">
      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :emp_number %>
        </div>
        <div class="company-form__input">
          <%= f.number_field :emp_number, class: 'company-form__input-area' %>
        </div>
      </div>
      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :avarage_age, "Employee's average age" %>
        </div>
        <div class="company-form__input">
          <%= f.number_field :avarage_age, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :capital %>
        </div>
        <div class="company-form__input">
          <%= f.number_field :capital, class: 'company-form__input-area' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__label">
          <%= f.label :foundation_date %>
        </div>
        <div class="company-form__input">
          <%= raw sprintf(
            f.date_select(
              :foundation_date,
              use_month_numbers: true,
              start_year: 1940,
              end_year: 2022,
              default: Date.new(1990, 1, 1),
              prefix: :foundation_date,
              date_separator: '%s'), 'year ', 'month ') + 'day' %>
        </div>
      </div>

      <div class="company-form__element">
        <div class="company-form__btn-area js-third-form-button company-form__btn-area">
          <%= f.submit yield(:button_text), class: "company-form__btn" %>
        </div>
        <div class="company-form__back-btn js-third-form-back">
          <span class="u-pointer">Back</span>
        </div>
      </div>
    </div>
  <% end %>
