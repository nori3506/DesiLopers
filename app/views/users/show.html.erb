<div class="container">
  <div align="center">
    <div class="PageLayout-content">
      <div class="FormContent">
        <h1><%= @user.name %></h1>
        <% if @user.portfolio.blank? %>
          <%= "No Portfolio was uploaded by #{@user.name} yet!" %>
        <% elsif %>
          <% if @user.portfolio.career == 1 %>
            <li><%= "Developer" %></li>
            <% elsif @user.portfolio.career == 2 %>
            <li><%= "Designer" %></li>
            <% elsif @user.portfolio.career == 3 %>
            <li><%= "Developer Designer" %></li>
          <% end %>
        <% end %>
        <% if !@user.portfolio.experience.blank? %>
          <li>経験</li>
          <%= @user.portfolio.experience %>
        <% end %>
        <li>コメント<%= @user.portfolio.message %></li>
        <li>webサイト<%= link_to "Main Website", @user.portfolio.first_site %></li>
        <% if !@user.portfolio.first_image.blank? %>
          <div class="user_image"><%= image_tag @user.portfolio.first_image.url, size: 130 %></div>
        <% else %>
          <div class="user_image"><%= image_tag("noimage.png", size: 130)%></div>
        <% end%>
        <li>webサイト<%= link_to "2nd Website", @user.portfolio.second_site %></li>
          <% if @user.portfolio.second_image? %>
            <div class="user_image"><%= image_tag @user.portfolio.second_image.url, size: 130 %></div>
          <% else %>
            <div class="user_image"><%= image_tag("noimage.png", size: 130)%></div>
          <% end %>
          <li>webサイト<%= link_to "3rd Website", @user.portfolio.third_site %></li>
          <% if @user.portfolio.third_image? %>
            <div class="user_image"><%= image_tag @user.portfolio.third_image.url, size: 130 %></div>
          <% else %>
            <div class="user_image"><%= image_tag("noimage.png", size: 130)%></div>
          <% end %>
        <% if loggedin? && (current_user.admin? || current_user == @user) && !@user.admin? %>
        <%= link_to "Edit", edit_user_path(@user) %>
        <%= link_to "Delete", user_path(@user), method: :delete,
                    data: {confirm: "Are you sure you want to delete the portfolio?"} %>
        <% end %>
        </br>
        <%= link_to "Back to User List", users_path %>
      </div>
    </div>
  </div>
</div>
