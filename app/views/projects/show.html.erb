<div class="project-detail-container">
  <div class="project-detail-container__grid">
    <% if current_user.nil? %>
      <input type="button" onclick="location.href='/signup'" value="Interest!" class="u-mb10  u-p2 u-block-right interest-button">
    <% elsif @project.interest_project? %>
      <button type="button" class="u-mb10 u-disable-button u-p2 u-block-right" disabled> Already Interest </button>
    <% else %>
      <button type="button" class="u-mb10 interest-button u-p2 u-block-right " id="jsInterestByUser" value="<%= @project.id %>">Interest</button>
    <% end %>
    <% if current_user.nil? %>
      <input type="button" onclick="location.href='/signup'" value="Apply!" class="u-mb10  u-p2 u-block-right apply-button">
    <% elsif @project.applied_project? %>
      <button type="button" class="u-mb10 u-disable-button u-p2 u-block-right" disabled> Already Applied </button>
    <% else %>
      <button type="button" class="u-mb10 apply-button u-p2 u-block-right " id="jsApplyByUser" value="<%= @project.id %>">Apply</button>
    <% end %>
  </div>
  <h1><%= @project.title %></h1>
  <div class="project-main-image">
    <img src="<%= @project.main_image %>">
  </div>
  <div class="project-detail-container__job-detail">
    <h2>Job Detail</h2>
    <div class="project-detail-container__detail-area project-detail u-mb10">
      <div class="project-heading">Detail</div>
      <div class="project-description">
        <%=safe_join(@project.detail.split("\n"),tag(:br))%>
      </div>
    </div>
    <div class="project-detail-container__detail-area project-background u-mb10">
      <div class="project-heading">Background</div>
      <div class="project-description">
        <%=safe_join(@project.background.split("\n"),tag(:br))%>
      </div>
    </div>
    <div class="project-detail-container__detail-area project-detail u-mb10">
      <div class="project-heading">Requirement</div>
      <div class="project-description">
        <%=safe_join(@project.requirement.split("\n"),tag(:br))%>
      </div>
    </div>
    <div class="project-detail-container__detail-area project-detail u-mb10">
      <div class="project-heading">Process</div>
      <div class="project-description">
        <%=safe_join(@project.process.split("\n"),tag(:br))%>
      </div>
      </div>
    </div>
  </div>
  <div class="other-projects">
    <h2>Job Posts from <%= @project.company.name %></h2>
    <% @other_projects.each do |project| %>
      <%= link_to project_path(project) do %>
        <div class="other-projects__block">
          <img src="<%= project.main_image %>">
          <h4 class="other-projects__title project-heading">
            <%=safe_join(project.title.truncate(30).split("\n"),tag(:br))%>
          </h4>
          <div class="other-projects__detail">     
            <%=safe_join(project.detail.truncate(300).split("\n"),tag(:br))%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
