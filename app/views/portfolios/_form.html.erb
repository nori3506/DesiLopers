<%= render 'shared/errors', obj: @portfolio %>
<div class="container">
 <div align="center">
  <div class="PageLayout-content">
   <div class="FormContent">
    <h1><%= yield(:portfolio_head) %></h1>
    <%= form_for @portfolio do |f| %>
     <div class="field">
      <%= f.label:career %>
      <%= select(:portfolio, :career, [['Developer', 1], ['Designer', 2],['Both', 3]]) %>
     </div>
     <div class="field">
      <%= f.label :experience, "Experience", class:"required" %> <br>
      <%= f.text_area :experience, placeholder: "Your Experience",class:"text-field", required: true %>
     </div>
     <div class="field">
      <%= f.label :message, "Message", class:"required" %><br>
      <%= f.text_area :message, placeholder: "Your Message",class:"text-field", required: true %>
     </div>
     <div class="field">
      <h3>Main Portfolio</h3>
      <%= f.label :first_site, "URL", class:"required" %><br>
      <%= f.text_area :first_site, class:"text-field", required: true %>
     </div>
     <div class="field">
      <%= f.label :first_image,"Image" %>
      <%= f.file_field :first_image %>
     </div>
     <div class="field">
      <h3>Second Portfolio</h3>
      <%= f.label :second_site,"URL" %><br>
      <%= f.text_area :second_site, class:"text-field" %>
     </div>
     <div class="field">
      <%= f.label :second_image, "Image" %>
      <%= f.file_field :second_image %>
     </div>
     <div class="field">
      <h3>Third Portfolio</h3>
      <%= f.label :third_site, "URL" %><br>
      <%= f.text_area :third_site, class:"text-field"%>
     </div>
     <div class="field">
      <%= f.label :third_image, "Image" %>
      <%= f.file_field :first_image %>
     </div>
     <div class="actions">
      <%= f.submit yield(:button_text) %>
     </div>
    <% end %>
   </div>
  </div>
 </div>
</div>