<%= javascript_pack_tag 'application' %>
<div class="container">
  <div id="root"></div>
  <div class="main home-grid">
    <div class="home-left-side">
      <div class="home-desctiption">
        <h1 class="welcome">DesiLopers<br> for your career</h1>
        <div class="home-text">
          <p class="home-first-text-area">
            <span class="u-text-yellow">Desi</span>gners + Deve<span class="u-text-yellow">lopers</span></br>  =</br> 
            <span class="u-text-yellow stronger">"DesiLopers"</span>
          </p>
          <p class="home-explanation u-pt20">
            DesiLopers enables all Designers and Developers can search the best job offer.
          </p>
        </div>
      </div>
      <div class="home-main-image">
      </div>      
    </div>
    <div class="home-right-side">
      <div class="login-button-area">
        <p><%= link_to "Sign Up", new_user_registration_path, class:"signup" %></p>
        <p class="under-little-space u-text-white">
          <%="Have an accountï¼Ÿ"%> <br><%= link_to "Login", new_user_session_path,class:"login-button" %>
        </p>
      </div>
    </div>
    <div class="project-main-container">
      <% @projects.each do |project| %>
        <div class="project-container">
          <div class="project-image-area">
            <div class="image-content">
              <img src="<%= project.company.main_image %>">
            </div>
            <div class="image-content">
              <img src="<%= project.main_image %>">
            </div>
          </div>
          <h3 class="project-element u-my25 project-header"> 
            <%= link_to  project.title, project_path(project) %>
          </h3>
          <div class="project-element u-mb10">
            <%= link_to  truncate(project.detail, length: 750), project_path(project) %>
          </div>
          <h3 class="project-element u-mt40 u-left company-name">
            <%= link_to  project.company.name, company_path(project.company) %>
          </h3>
        </div>
      <% end %>
    </div>
  </div>
</div>
